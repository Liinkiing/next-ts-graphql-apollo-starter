{
  "name": "next-ts-starter",
  "version": "1.0.0",
  "description": "A simple Next.JS powered typescript starter with styled components",
  "scripts": {
    "gql-gen": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 gql-gen",
    "gql-gen:watch": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 gql-gen --watch",
    "dev": "concurrently  \"yarn dev:next\" \"yarn gql-gen:watch\" ",
    "dev:next": "next",
    "build": "next build",
    "start": "next start"
  },
  "keywords": [
    "starter",
    "template",
    "styled-components",
    "next",
    "nextjs",
    "react",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/Liinkiing/next-ts-starter",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Liinkiing/next-ts-starter/issues"
  },
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@apollo/react-ssr": "^3.1.4",
    "@styled-system/should-forward-prop": "^5.1.5",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.17",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^2.0.0-beta.42",
    "isomorphic-fetch": "^2.2.1",
    "next": "^9.3.4",
    "next-compose-plugins": "^2.2.0",
    "next-env": "^1.1.1",
    "next-fonts": "^1.0.3",
    "next-images": "^1.4.0",
    "nprogress": "^0.2.0",
    "polished": "^3.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.13.2",
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/fragment-matcher": "^1.13.2",
    "@graphql-codegen/typescript": "^1.13.2",
    "@graphql-codegen/typescript-operations": "^1.13.2",
    "@graphql-codegen/typescript-react-apollo": "^1.13.2",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "^13.11.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/styled-components": "^5.1.0",
    "@types/styled-system": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "graphql-tag": "^2.10.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
