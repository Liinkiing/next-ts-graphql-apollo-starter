{
  "name": "next-ts-starter",
  "version": "1.0.0",
  "description": "A Next powered starter which include support for Apollo with GraphQL, SSR support, codegen, styled component / system and framer motion",
  "scripts": {
    "gql-gen": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 gql-gen",
    "gql-gen:watch": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 gql-gen --watch",
    "dev": "concurrently  \"yarn dev:next\" \"yarn gql-gen:watch\" ",
    "dev:next": "next",
    "prebuild": "gql-gen",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint --cache --fix --report-unused-disable-directives src/**/*.{js,ts,jsx,tsx}",
    "ts:check": "tsc --noEmit",
    "test": "jest --runInBand --coverage=false",
    "test:ci": "yarn test --ci",
    "test:watch": "yarn test --watch",
    "cy:open": "yarn --cwd cypress cy:open",
    "cy:run": "yarn --cwd cypress cy:run",
    "cy:run:cy": "yarn --cwd cypress cy:run:ci",
    "prepare": "husky install"
  },
  "keywords": [
    "starter",
    "template",
    "styled-components",
    "styled-system",
    "framer-motion",
    "graphql",
    "graphql-codegen",
    "codegen",
    "apollo",
    "ssr",
    "next",
    "nextjs",
    "react",
    "typescript",
    "cypress"
  ],
  "repository": {
    "url": "https://github.com/Liinkiing/next-ts-graphql-apollo-starter",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Liinkiing/next-ts-graphql-apollo-starter/issues"
  },
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "dependencies": {
    "@apollo/client": "^3.4.7",
    "@apollo/react-ssr": "^4.0.0",
    "@next/bundle-analyzer": "^11.1.0",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "apollo-link-fragment-argument": "^1.0.1",
    "babel-jest": "^27.0.6",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^4.1.17",
    "https": "^1.0.0",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.5",
    "lodash-es": "^4.17.21",
    "next": "^11.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "next-images": "^1.8.1",
    "nprogress": "^0.2.0",
    "polished": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "ts-jest": "^27.0.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.0.0",
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/fragment-matcher": "^3.0.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.0.0",
    "@next/eslint-plugin-next": "^11.1.0",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.12",
    "@types/styled-system": "^5.1.12",
    "@types/styled-system__css": "^5.0.16",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-plugin-styled-components": "^1.13.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.5",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.md": ["npx prettier --parser markdown --write"],
    "*.{css,scss,less}": ["npx prettier --parser css --write"],
    "*.json": ["npx prettier --parser json --write"],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest -c jest.config.js --bail --runInBand --findRelatedTests --coverage=false"
    ]
  }
}
